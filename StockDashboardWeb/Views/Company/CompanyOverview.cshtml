@model StockDashboardWeb.Models.CompanyOverview

<h2>Company Overview</h2>

<form method="post" action="@Url.Action("FetchOverview")">
    <label for="symbol">Enter Stock Symbol:</label>
    <input type="text" id="symbol" name="symbol" required />
    <button type="submit">Fetch Overview</button>
</form>

@if (Model != null)
{
    <div>
        <strong>Symbol:</strong> @Model.Symbol <br />
        <strong>Name:</strong> @Model.Name <br />
        <strong>Description:</strong> @Model.Description <br />
        <!-- ... display other properties ... -->
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="error">
        @ViewBag.ErrorMessage
    </div>
}