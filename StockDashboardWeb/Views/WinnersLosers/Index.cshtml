@model StockDashboardWeb.Models.WinLose

<!-- Basic styles -->
<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 30px;
    }

    th, td {
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .positive {
        color: green;
    }

    .negative {
        color: red;
    }
</style>

<h1>Stock Details for @Model.Ticker</h1>

<table>
    <thead>
        <tr>
            <th>Ticker</th>
            <th>Price</th>
            <th>Change Amount</th>
            <th>Change Percentage</th>
            <th>Volume</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Ticker</td>
            <td>@Model.Price</td>
            <td class="@(Model.Change_amount >= 0 ? "positive" : "negative")">@Model.Change_amount</td>
            <td>@Model.Change_percentage</td>
            <td>@Model.Volume</td>
        </tr>
    </tbody>
</table>